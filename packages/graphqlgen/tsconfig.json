{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "rootDir": "./src",
    "outDir": "dist",
    "sourceMap": true,
    "lib": ["es2015", "esnext.asynciterable"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "resolveJsonModule": true
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": ["node_modules", "generated", "example", "examples"]
}
